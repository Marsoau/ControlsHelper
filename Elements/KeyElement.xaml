<UserControl x:Class="ControlsHelper.Elements.KeyElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsHelper.Elements"
             mc:Ignorable="d" 
             Background="White"
             AllowDrop="True"
             d:DesignHeight="64" d:DesignWidth="64" BorderThickness="4,4,4,4" BorderBrush="#FFF0F0F0" MouseWheel="UserControl_MouseWheel" MouseLeave="UserControl_MouseLeave" MouseDown="UserControl_MouseDown" Drop="UserControl_Drop" MouseUp="UserControl_MouseUp" MouseMove="UserControl_MouseMove">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="TextBlock_Title" Grid.Row="0" Text="T" TextAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 0" FontSize="15" FontWeight="Bold" TextTrimming="CharacterEllipsis" Foreground="#FF3A3A3A"/>
        <TextBlock x:Name="TextBlock_Label" Grid.Row="1" Text="countermeasures countermeasures" TextAlignment="Center" VerticalAlignment="Center" Margin="4,0" FontSize="10" TextTrimming="CharacterEllipsis" TextWrapping="Wrap" Foreground="DimGray"/>
    </Grid>
</UserControl>
