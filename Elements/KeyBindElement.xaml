<UserControl x:Class="ControlsHelper.Elements.KeyBindElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ControlsHelper.Elements"
             mc:Ignorable="d" 
             Background="#F0F0F0"
             d:DesignHeight="24" d:DesignWidth="1140" MouseUp="UserControl_MouseUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel x:Name="StackPanel_MiniKeys" Orientation="Horizontal">
        </StackPanel>
        <TextBlock x:Name="TextBlock_Function" Text="Test" Margin="4,0,0,0" Grid.Column="1" VerticalAlignment="Center" FontWeight="Bold"/>
    </Grid>
</UserControl>
